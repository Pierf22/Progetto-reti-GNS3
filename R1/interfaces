source /etc/network/interfaces.d/*

auto eth0
iface eth0 inet static
network 10.0.8.68
netmask 255.255.255.252
address 10.0.8.69
broadcast 10.0.8.71

auto eth1
iface eth1 inet static
network 10.0.4.0
netmask 255.255.254.0
address 10.0.4.2
broadcast 10.0.5.255

auto eth2
iface eth2 inet static
network 10.0.6.0
netmask 255.255.254.0
address 10.0.6.2
broadcast 10.0.7.255

auto eth3
iface eth3 inet static
network 10.0.8.64
netmask 255.255.255.252
address 10.0.8.66
broadcast 10.0.8.67

#Rotta di default per andare verso Internet
#rotta per raggiungere Area Green
post-up route add default gw 10.0.8.65 dev eth3

#Rotta per raggiungere CD5
post-up route add -net 10.0.8.72/30 gw 10.0.8.70 dev eth0

#Rotta per raggiungere Area Red
post-up route add -net 10.0.0.0/22 gw 10.0.8.70 dev eth0

