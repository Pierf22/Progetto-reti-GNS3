source /etc/network/interfaces.d/*

auto eth0
iface eth0 inet static
network 10.0.8.76
netmask 255.255.255.252
address 10.0.8.78
broadcast 10.0.8.79

auto eth1
iface eth1 inet static
network 10.0.8.0
netmask 255.255.255.192
address 10.0.8.1
broadcast 10.0.8.63

auto eth2
iface eth2 inet static
network 10.0.8.64
netmask 255.255.255.252
address 10.0.8.65
broadcast 10.0.8.67

#Rotta per internet 
post-up route add default gw 10.0.8.77 dev eth0

#Rotta per raggiungere area DMZ
post-up route add -net 10.0.4.0/22 gw 10.0.8.66 dev eth2

#Rotta per raggiungere CD4
post-up route add -net 10.0.8.68/30 gw 10.0.8.66 dev eth2

#Rotta per raggiungere CD5
post-up route add -net 10.0.8.72/30 gw 10.0.8.66 dev eth2

#Rotta per raggiungere area RED
post-up route add -net 10.0.0.0/22 gw 10.0.8.66 dev eth2

#Caricamento del firewall
post-up sh /etc/network/firewall.sh
